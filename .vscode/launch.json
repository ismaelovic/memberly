{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI Backend",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "backend.main:app",
                "--reload",
                "--port",
                "8000"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONUNBUFFERED": "1",
                "DATABASE_URL": "postgresql+psycopg2://memberly_user:ziyani@localhost:5432/memberly",
                "REDIS_URL": "redis://localhost:6379/0",
                "SECRET_KEY": "dev-secret-key",
                "DEBUG": "True"
            },
            "justMyCode": false
        },
        {
            "name": "Current File (Backend Context)",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend",
                "DATABASE_URL": "postgresql+psycopg2://memberly_user:ziyani@localhost:5432/memberly",
                "REDIS_URL": "redis://localhost:6379/0",
                "SECRET_KEY": "dev-secret-key",
                "DEBUG": "True"
            },
            "justMyCode": false
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Frontend",
            "runtimeExecutable": "/usr/local/bin/npm",
            "runtimeArgs": [
                "run",
                "frontend"
            ],
            "cwd": "${workspaceFolder}/frontend",
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Debug Frontend in Chrome",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/frontend/src",
            "sourceMaps": true
        }
    ]
}